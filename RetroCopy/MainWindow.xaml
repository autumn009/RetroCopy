<Window x:Class="RetroCopy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RetroCopy"
        mc:Ignorable="d"
        Title="RetroCopy" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <Label>Source Directory:</Label>
            <ComboBox x:Name="SrcCombo">
                <ComboBoxItem>x:\</ComboBoxItem>
                <ComboBoxItem>y:\</ComboBoxItem>
                <ComboBoxItem>z:\</ComboBoxItem>
            </ComboBox>
            <Label>Source Directory:</Label>
            <ComboBox x:Name="DstCombo">
                <ComboBoxItem>c:\delme</ComboBoxItem>
                <ComboBoxItem>n:\oldFDs</ComboBoxItem>
            </ComboBox>
            <Button Height="50" Click="Button_Click">START COPY</Button>
            <Button Click="Button_Click_1">CLOSE</Button>
            <TextBox AcceptsReturn="True" TextWrapping="Wrap" VerticalAlignment="Stretch" IsReadOnly="True" x:Name="TextStatus"></TextBox>
        </StackPanel>
    </Grid>
</Window>
